@using Microsoft.AspNetCore.Identity
@using CiuchApp.Dashboard.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link">Wyloguj</button>
            </li>
        </ul>
    </form>
}
else
{
    <li><a asp-area="" asp-controller="Account" asp-action="Login">Zaloguj</a></li>
    <li><a class="codrops-icon codrops-icon-prev" asp-area="" asp-controller="Account" asp-action="Register"><span>Nowe konto</span></a></li>
}

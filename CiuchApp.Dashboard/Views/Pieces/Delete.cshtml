@model CiuchApp.Domain.Piece

<h3>Chcesz chcesz usunąć?</h3>
<div>
    <form asp-action="Delete">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" readonly="@(true)" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="BuyPrice" class="control-label"></label>
            <input asp-for="BuyPrice" class="form-control" readonly="@(true)" />
            <span asp-validation-for="BuyPrice" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="SellPrice" class="control-label"></label>
            <input asp-for="SellPrice" class="form-control" readonly="@(true)" />
            <span asp-validation-for="SellPrice" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="OrderDate" class="control-label"></label>
            <input asp-for="OrderDate" class="form-control" readonly="@(true)" />
            <span asp-validation-for="OrderDate" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="EstimatedDateOfShipment" class="control-label"></label>
            <input asp-for="EstimatedDateOfShipment" class="form-control" readonly="@(true)" />
            <span asp-validation-for="EstimatedDateOfShipment" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="EstimatedTimeOfDelivery" class="control-label"></label>
            <input asp-for="EstimatedTimeOfDelivery" class="form-control" readonly="@(true)" />
            <span asp-validation-for="EstimatedTimeOfDelivery" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ImageName" class="control-label"></label>
            <input asp-for="ImageName" class="form-control" readonly="@(true)" />
            <span asp-validation-for="ImageName" class="text-danger"></span>
        </div>

        @await Component.InvokeAsync("DeleteButtonRow")
    </form>
</div>

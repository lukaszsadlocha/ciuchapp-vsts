@model IEnumerable<CiuchApp.Domain.Piece>

@{
    string localStoragePath = ViewBag.PhotoStoragePath;
}

@await Component.InvokeAsync("IndexButtonRow", new { includeExcelActions = true})

<div class="row ciuchapp-card">

    @foreach (var item in Model)
    {
        <div class="card">
            <div class="card-img-wrapper" style="background-image:url(/@localStoragePath/@item.ImageName)">
            </div>
            <div class="card-body">
                <h4 class="card-title">@Html.DisplayFor(modelItem => item.Name)</h4>
                <div class="card-text">@Html.DisplayFor(modelItem => item.MainCategory.Name)</div>
                <div class="card-text">@Html.DisplayFor(modelItem => item.Group.Name)</div>
                <div class="card-text">@Html.DisplayFor(modelItem => item.Color.Name)</div>
                <div class="card-text">@Html.DisplayNameFor(model => model.BuyPrice): @Html.DisplayFor(model => item.BuyPrice)</div>

                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-secondary card-button"><i class="fa fa-pen"></i></a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-secondary card-button"><i class="fa fa-trash"></i></a>

            </div>
        </div>

    }
</div>


